# Production Environment Variables for Render/Cloud Deployment
# For Render: Add these in the Dashboard â†’ Environment Variables section
# For Docker: Copy this file to .env.production and fill in your actual values

# API Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# PostgreSQL Configuration (Docker compose only)
POSTGRES_USER=your_prod_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=your_prod_database

# Database Connection for API
# For Render: Get these from your PostgreSQL database dashboard
DB_HOST=postgres  # For Render: use your-db.postgres.render.com
DB_PORT=5432
DB_USER=your_prod_user
DB_PASSWORD=your_secure_password
DB_NAME=your_prod_database
DB_SSL=true  # Set to true for Render and most cloud providers

# Full Database URL (Render provides this automatically)
DATABASE_URL=postgresql://user:password@host:5432/database

# CORS Configuration
CORS_ORIGIN=*  # Update with your frontend URL in production

