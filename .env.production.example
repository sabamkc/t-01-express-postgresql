# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# API Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# PostgreSQL Configuration
POSTGRES_USER=your_prod_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=your_prod_database

# Database Connection for API
DB_HOST=postgres
DB_PORT=5432
DB_USER=your_prod_user
DB_PASSWORD=your_secure_password
DB_NAME=your_prod_database

# Full Database URL (optional, for convenience)
DATABASE_URL=postgres://your_prod_user:your_secure_password@postgres:5432/your_prod_database
